<?xml version="1.0" encoding="UTF-8" ?>
<themeeditor>
		 
		<author>lexustheme</author>
	<name>Live Theme Editor</name>	
	<layout>
		
		<item>
			<block>Layout</block>
			<default>fullwidth</default>
			<option>
				 <text>Full Width</text>
				 <value>fullwidth</value>
			</option> 
			<option>
				 <text>Boxed Large</text>
				 <value>boxed-lg</value>
			</option>
			<option>
				 <text>Boxed Medium</text>
				 <value>boxed-md</value>
			</option> 
		</item>

		<item>
			<block>Quickview</block>
			<default>0</default>
			<option>
				 <text>Enable</text>
				 <value>1</value>
			</option> 
			<option>
				 <text>Disable</text>
				 <value>0</value>
			</option>
		</item>
	</layout>
</themeeditor>